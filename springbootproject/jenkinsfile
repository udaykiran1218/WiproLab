pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/udaykiran1218/WiproLab.git'
            }
        }

        stage('Build') {
            steps {
                dir('springbootproject') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('springbootproject') {
                    sh 'mvn test'
                }
            }
        }
    }
}
